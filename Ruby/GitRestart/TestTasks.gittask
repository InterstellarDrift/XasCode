
GitRestart::Task.new do |t|
	t.name = "Failure testing";
	t.report_status = true;

	t.active = true;
	t.watch(/.*/);

	t.targets << "echo Hello from #{t.branch}, modified files: #{t.modified} > TestOutput.txt"
	t.targets << 'sleep 10'
	t.targets << 'exit 1'
end

GitRestart::Task.new do |t|
	t.name = "Git-Task-Tester"
	t.active = true;

	t.watch(/task.rb/);
	t.watch(/tc_task.rb/);

	t.targets << "ruby tests/tc_task.rb";
end
